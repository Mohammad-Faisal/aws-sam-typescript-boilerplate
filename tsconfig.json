{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2015",
        "module": "commonjs",
        "sourceMap": true,
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"]
}
